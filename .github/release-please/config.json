{
  "separate-pull-requests": true,
  "group-pull-request-title-pattern": "chore: release ${component} ${branch}",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-component-in-tag": true,
  "release-type": "rust",
  "plugins": [
    {
      "type": "cargo-workspace",
      "merge": false
    }
  ],
  "packages": {
    "core": {
      "path": "core"
    }
  }
}
