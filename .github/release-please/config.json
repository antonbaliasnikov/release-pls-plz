{
  "separate-pull-requests": true,
  "group-pull-request-title-pattern": "chore: release ${component} ${version}",
  "bootstrap-sha": "2642a686b3688ca0b4ceea970e52e28fa26c7c45",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-component-in-tag": true,
  "release-type": "simple",
  "packages": {
    "core": {
      "component": "core",
      "path": "core",
      "extra-files": [
        {
          "type": "generic",
          "path": "core/Cargo.toml"
        }
      ]
    },
    "prover": {
      "component": "prover",
      "path": "prover",
      "extra-files": [
        {
          "type": "generic",
          "path": "prover/Cargo.toml"
        }
      ]
    }
  }
}
