{
  "separate-pull-requests": true,
  "group-pull-request-title-pattern": "chore: release ${component} ${version}",
  "bootstrap-sha": "84f7d909860f915fd7bd8e635e3b57767545c6c8",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-component-in-tag": true,
  "release-type": "simple",
  "packages": {
    "core": {
      "component": "core",
      "path": "core",
      "extra-files": [
        {
          "type": "generic",
          "path": "Cargo.toml"
        }
      ]
    },
    "prover": {
      "component": "prover",
      "path": "prover",
      "extra-files": [
        {
          "type": "generic",
          "path": "Cargo.toml"
        }
      ]
    }
  }
}
